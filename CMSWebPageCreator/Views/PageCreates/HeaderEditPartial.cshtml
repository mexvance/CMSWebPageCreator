@model HeaderInfo
@{
    ViewData["Title"] = "HeaderEditPartial";
}
<form asp-action="EditHeaderItem">
    <div class="form-indented">
            <label asp-for="@Model.HeaderContent" class="control-label"></label>
            <input asp-for="@Model.HeaderContent" class="form-control" />
            <span asp-validation-for="@Model.HeaderContent" class="text-danger"></span>
            <div class="form-group">
                <label asp-for="@Model.ContentType" class="control-label"></label>
                <select asp-for="@Model.ContentType" class="form-control">
                    <option value="0">Header Title</option>
                    <option value="1">Normal Text</option>
                </select>
                <span asp-validation-for="@Model.ContentType" class="text-danger"></span>

                <input type="hidden" value="@Model.PageCreateParentId" asp-for="PageCreateParentId" />
                <input type="hidden" value="@Model.HeaderId" asp-for="HeaderId" />
            </div>
            <div class="form-group">
                <input type="submit" name="edit" value="Edit Item" class="btn btn-dark" />
                <input type="submit" name="delete" value="Delete Item" class="btn btn-dark" />
            </div>
        </div>
</form>
