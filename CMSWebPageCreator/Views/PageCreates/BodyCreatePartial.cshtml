@model BodyInfo
@{
    ViewData["Title"] = "BodyCreatePartial";
}

<h1>Add New Body Item</h1>
<form asp-action="CreateBodyItem">
    <div class="form-indented">

        <label asp-for="@Model.BodyContent" class="control-label"></label>
        <input asp-for="@Model.BodyContent" class="form-control" />
        <span asp-validation-for="@Model.BodyContent" class="text-danger"></span>
        <div class="form-group">
            <label asp-for="@Model.ContentType" class="control-label"></label>
            <select asp-for="@Model.ContentType" class="form-control">
                <option value="0">Title</option>
                <option value="1">Body Text</option>
                <option value="2">Image Address</option>
            </select>
            <span asp-validation-for="@Model.ContentType" class="text-danger"></span>
            <input type="hidden" value="@Model.PageCreateParentId" asp-for="PageCreateParentId" />
        </div>
        <div class="form-group">
            <input type="submit" value="Create Body Item" class="btn btn-dark" />
        </div>
    </div>
</form>
