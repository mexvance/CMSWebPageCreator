@model FooterInfo
@{
    ViewData["Title"] = "FooterEditPartial";
}
<form asp-action="EditFooterItem">
    <div class="form-indented">
        <label asp-for="@Model.FooterContent" class="control-label"></label>
        <input asp-for="@Model.FooterContent" class="form-control" />
        <span asp-validation-for="@Model.FooterContent" class="text-danger"></span>
        <div class="form-group">
            <label asp-for="@Model.ContentType" class="control-label"></label>
            <select asp-for="@Model.ContentType" class="form-control">
                <option value="0">Title</option>
                <option value="1">Footer Text</option>
            </select>
            <span asp-validation-for="@Model.ContentType" class="text-danger"></span>

            <input type="hidden" value="@Model.PageCreateParentId" asp-for="PageCreateParentId" />
            <input type="hidden" value="@Model.FooterId" asp-for="FooterId" />
        </div>
        <div class="form-group">
            <input type="submit" name="edit" value="Edit Item" class="btn btn-dark" />
            <input type="submit" name="delete" value="Delete Item" class="btn btn-dark" />
        </div>
    </div>
</form>
