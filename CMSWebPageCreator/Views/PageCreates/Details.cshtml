@model CMSWebPageCreator.Models.PageCreate

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>PageCreate</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
    </dl>
</div>
<div id="topComment">
    @foreach (var item in ViewBag.MyBody)
    {
    <div>
        @if (item.ContentType.Equals(0))
        {
            <h1>@item.BodyContent</h1>
        }
        @if (item.ContentType.Equals("BodyText"))
        {
            <p>@item.BodyContent</p>
        }
        else
        {
            <p>We broke</p>
        }
    </div>
    }
</div>
