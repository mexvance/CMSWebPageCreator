@model Comment
@{
    ViewData["Title"] = "NewComment";
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateComment">
            <div class="form-group">
                <input type="hidden" asp-for="UserId" value="@Model.UserId" />
                <input type="hidden" asp-for="Time" type="datetime" value='@DateTime.Now' required hidden />
                <input type="hidden" asp-for="ParentId" value="@Model.ParentId" />
                <input type="hidden" asp-for="PostId" value="@Model.PostId" />
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label">New Comment</label>
                <input asp-for="Content" class="form-control" required />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create Comment" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>